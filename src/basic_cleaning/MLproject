name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: "Fully-qualified name for the input artifact"
        type: string

      output_artifact:
        description: "Fully-qualified name for the output artifact"
        type: string

      output_type:
        description: "Dataframe"
        type: string

      output_description:
        description: "Cleaned data for the price on NYV apartments"
        type: string

      min_price:
        description: "Minimum price we're willing to pay for to rent a place"
        type: float

      max_price:
        description: "Maximum price we're willing to pay for to rent a place"
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {